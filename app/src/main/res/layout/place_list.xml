<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/place_list_imageview"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/place_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/place_list_imageview"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/place_list_imageview"
        android:text="Pashupatinath Temple"
        android:textColor="@color/colorText1"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_list_textview2"
        android:layout_alignStart="@+id/place_list_textview"
        android:layout_below="@+id/place_list_textview"
        android:text="Kathmandu,Nepal"
        android:textColor="@color/colorText1"
        android:textSize="14dp"/>
</RelativeLayout>