<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/backgroundColor"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/place_list_imageview"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:elevation="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/place_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/place_list_imageview"
        android:textSize="15dp"
        android:text="Pashupatinath Temple"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/place_list_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/place_list_textview"
        android:layout_below="@+id/place_list_textview"
        android:layout_marginTop="6dp"
        android:text="Kathmandu,Nepal"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <RatingBar
        android:id="@+id/place_list_ratingbar"
        style="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/place_list_textview2"
        android:layout_below="@+id/place_list_textview2"
        android:layout_marginTop="7dp"
        android:clickable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5" />

</RelativeLayout>